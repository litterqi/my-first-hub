.main{margin-bottom:30px;font-family: "Helvetica Neue","Hiragino Sans GB","Microsoft YaHei","\9ED1\4F53",Arial,sans-serif;
    font-size: 30rpx;
	color:#888;}
.map{width: 100%; height: 300px;border-bottom:2px solid #eee}
.mcname{height:100rpx;font-size:39rpx;font-weight:bold;line-height:100rpx;text-align:center;margin-top:30rpx;color:#888}
.mcinfo{font-size:30rpx;min-height:100rpx;line-height:100rpx;border:1px solid #eee;border-radius:3px;width:94%;word-break:break-all;margin:auto;color:#999;background:#fff}
.mctlt{width:28%;text-align:right;pading-left:5px;font-size:30rpx;float:left;}
.mcval{width:70%;vertical-align:middle;pading-left:5px;font-size:30rpx;float:left;}
.banner image{width: 100%; height: 400rpx;}
	.goods-box .goods-operation{
    position: relative;
    width: 92%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 50rpx;
    margin:0 auto 60rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
    background: #39F50B;
    color: #fff;
    font-size: 28rpx;
}
.goods-operation text{
    display: inline-block;
    height: 100rpx;
}
.goods-operation-num{
    width: 160rpx;
}
.goods-operation-add{
    width: 80rpx;
    margin-right: 30rpx;
}