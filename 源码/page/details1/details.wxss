page{
    background-color: #ffffff;
    font-family: "Helvetica Neue","Hiragino Sans GB","Microsoft YaHei","\9ED1\4F53",Arial,sans-serif;
    font-size: 30rpx;
	color:#888;
}
.navigator-hover{
    background: none;
}

.catbox{
    position: relative;
    text-align: center;
    color: #454552;
}
.catbox .catthumb{
    width: 100%;
    height: 360rpx;
}

.cattitle{
	position:absolute;
	top:320rpx;
	margin:0 3%;
	width:92%;
	text-align:center;
	line-height:80rpx;
	color:#000;
	font-size:39rpx;
	font-weight:bold;
	text-shadow:#fff 1px 0 0,#fff 0 1px 0,#fff -1px 0 0,#fff 0 -1px 0;
-webkit-text-shadow:#fff 1px 0 0,#fff 0 1px 0,#fff -1px 0 0,#fff 0 -1px 0;
-moz-text-shadow:#fff 1px 0 0,#fff 0 1px 0,#fff -1px 0 0,#fff 0 -1px 0;
}

.catinfo{width:92%;margin: 50rpx auto}
.catinfo-thumb{width: 100%;height: 360rpx;}
.catinfo-text{width: 100%;height:60rpx;line-height:60rpx;text-align:center;}

.ubom{clear:both;width:92%;height:20rpx;border-bottom:1px solid #eee;margin:20rpx auto;}